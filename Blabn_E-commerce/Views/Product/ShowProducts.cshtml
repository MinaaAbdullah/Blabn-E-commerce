@model IEnumerable<Blabn_E_commerce.Models.Product>

@{
    ViewData["Title"] = "Product List";
}

<h2>Product List</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Image</th>
            <th>Actions</th> <!-- Added Actions column -->
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@product.Price.ToString("C")</td>
                <td>
                    @if (!string.IsNullOrEmpty(product.Image))
                    {
                        <img src="@Url.Content(product.Image)" alt="@product.Name" width="100" height="100" />
                    }
                    else
                    {
                        <span>No Image</span>
                    }
                </td>
                <td>
                    <!-- Edit Button -->
                    <a asp-action="Edit" asp-route-id="@product.ProductId" class="btn btn-warning">Edit</a>
                    <!-- Delete Button -->
                    <a asp-action="Delete" asp-route-id="@product.ProductId" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this product?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

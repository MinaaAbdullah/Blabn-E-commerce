@model Blabn_E_commerce.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<h1>Delete Product</h1>

<div>
    <h3>Are you sure you want to delete this product?</h3>
    <div>
        <h4>@Model.Name</h4>
        <p>
            <strong>Description:</strong> @Model.Description<br />
            <strong>Price:</strong> @Model.Price<br />
            <strong>Image:</strong> @Model.Image
        </p>
    </div>

    <form asp-action="DeleteConfirmed" asp-controller="Product" method="post">
        <input type="hidden" asp-for="ProductId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="ShowProducts" class="btn btn-secondary">Cancel</a>
    </form>
</div>
